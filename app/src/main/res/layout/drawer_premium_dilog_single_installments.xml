<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/browse_dialog_single_installment_parentRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:orientation="horizontal"
        android:background="@drawable/box_cornered_whitefilled_greystroke">

        <TextView
            android:layout_weight="1"
            android:visibility="visible"
            android:id="@+id/browse_dialog_single_installments_monthTv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/varela"
            android:text="4 Months"
            android:textSize="14dp"
            android:textColor="@color/black"/>


        <TextView
            android:layout_weight="1"
            android:visibility="visible"
            android:id="@+id/browse_dialog_single_installments_OfferTv"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/browse_dialog_single_installments_monthTv"
            android:paddingHorizontal="4dp"
            android:fontFamily="@font/doppio_one"
            android:text="10% OFF"
            android:textSize="12dp"
            android:textStyle="italic"
            android:textColor="@color/cardColor"
            android:backgroundTint="@color/faint_red"
            android:background="@drawable/box_cornered_googlebluefilled"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/browse_dialog_single_installments_savedMoneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/varela"
            android:text="SAVE Rs.00.00"
            android:textSize="12dp"
            android:textColor="@color/primaryRed"/>


        <TextView
            android:visibility="visible"
            android:id="@+id/browse_dialog_single_installments_AmountPerMonthTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/browse_dialog_single_installments_savedMoneyTv"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/varela"
            android:text="Rs.10,000 / MONTH"
            android:textSize="14dp"
            android:textColor="@color/black"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/browse_dialog_single_installments_totalFeesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/browse_dialog_single_installments_AmountPerMonthTv"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/varela"
            android:text="TOTAL FEES : Rs. 30,0000"
            android:textSize="12dp"
            android:textColor="@color/darkGrey"/>



    </RelativeLayout>

</LinearLayout>