<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardColor"
   android:layout_margin="10dp"
    android:paddingBottom="12dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/classtest_single_question_queNoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        android:text="Q.1"
        android:textSize="14dp"
        android:fontFamily="@font/varela"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
       android:layout_marginTop="0dp"
        android:background="@color/grey"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/classtest_single_question_text1Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which addresses can be given to device in network 131.107.0.0 with astandered class B subnet mask ?"
        android:textSize="16dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/black"/>


        <ImageView
            android:visibility="gone"
            android:id="@+id/classtest_single_question_imageviewIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/questionimage"/>




    <TextView
        android:visibility="gone"
        android:id="@+id/classtest_single_question_text2Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which addresses can be given to device in network 131.107.0.0 with astandered class B subnet mask ?"
        android:textSize="16dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/varela"
        android:textColor="@android:color/black"/>



        <com.example.minglishmantra_beta.RecursiveRadioGroup
            android:id="@+id/classtest_question_single_rrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/classtest_question_single_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:text="Maharashtra"
                android:textColor="@color/black"
                android:fontFamily="@font/varela"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:buttonTint="@color/darkGrey"
                android:background="@drawable/classtest_selector_radiobuttons"/>


            <RadioButton
                android:id="@+id/classtest_question_single_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:text="Uttar pradesh"
                android:textColor="@color/black"
                android:fontFamily="@font/varela"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:buttonTint="@color/darkGrey"
                android:background="@drawable/classtest_selector_radiobuttons"/>


            <RadioButton
                android:id="@+id/classtest_question_single_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:text="Telangana"
                android:textColor="@color/black"
                android:fontFamily="@font/varela"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:buttonTint="@color/darkGrey"
                android:background="@drawable/classtest_selector_radiobuttons"/>



            <RadioButton
                android:id="@+id/classtest_question_single_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:text="All of above"
                android:textColor="@color/black"
                android:fontFamily="@font/varela"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:buttonTint="@color/darkGrey"
                android:background="@drawable/classtest_selector_radiobuttons"/>


        </com.example.minglishmantra_beta.RecursiveRadioGroup>



</LinearLayout>

</androidx.core.widget.NestedScrollView>