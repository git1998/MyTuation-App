<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/cardColor">

    <RelativeLayout
        android:id="@+id/main_single_livelectures_parentRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingHorizontal="12dp"
        android:background="@drawable/box_cornered_whitefilled_greystroke">

        <androidx.cardview.widget.CardView
            android:id="@+id/onlinetest_tv1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_centerVertical="true"
            android:elevation="0dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/live_single_livelectures2_senderImageIv"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/app_chetan_thakre2"/>

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/live_single_livelectures_videoLockIv"
            android:layout_marginVertical="8dp"
            android:layout_toRightOf="@id/onlinetest_tv1"
            android:layout_marginLeft="8dp">


            <TextView
                android:id="@+id/main_single_livelectures_tittleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/varela"
                android:text="Physics | Laws of motion in realm of quantum | Lec 1"
                android:textColor="@color/black"
                android:textSize="14dp" />



            <TextView
                android:id="@+id/main_single_livelectures_avaialbeAtTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_single_livelectures_tittleTv"
                android:layout_alignStart="@id/main_single_livelectures_tittleTv"
                android:fontFamily="@font/varela"
                android:text="Available at 10:00"
                android:textSize="12dp"
                android:textColor="@color/jast_grey"/>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/main_single_livelectures_liveNowRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/main_single_livelectures_avaialbeAtTv"
                android:layout_alignStart="@id/main_single_livelectures_tittleTv"
                android:layout_marginTop="0dp">


                <TextView
                    android:id="@+id/ljoijojjl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/varela"
                    android:text="27 Joined"
                    android:textSize="12dp"
                    android:textColor="@color/jast_grey"/>


                <ImageView
                    android:id="@+id/iuiussiui"
                    android:layout_height="12dp"
                    android:layout_width="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:padding="0dp"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_round_red2_24dp"/>



                <TextView
                    android:id="@+id/ljoijojjffl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/varela"
                    android:text="Live Now"
                    android:textSize="12dp"
                    android:textColor="@color/primaryRed"/>



            </LinearLayout>



        </LinearLayout>



        <ImageView
            android:id="@+id/live_single_livelectures_videoLockIv"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/jastest_grey"
            android:src="@drawable/ic_lock_black_24dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/main_single_livelectures_quizParentRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_cornered_whitefilled_greystroke">


        <ImageView
            android:id="@+id/onlinetest_tv1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
         android:layout_centerVertical="true"
            android:tint="@color/jastest_grey"
            android:src="@drawable/ic_alarm_black_24dp"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginVertical="8dp"
            android:layout_toRightOf="@id/onlinetest_tv1"
            android:layout_marginLeft="8dp">


            <TextView
                android:id="@+id/main_single_livelectures_tittleTv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/varela"
                android:text="Quiz"
                android:textColor="@color/black"
                android:textSize="14dp" />



            <TextView
                android:visibility="gone"
                android:id="@+id/live_single_livelectures_quizAvailableTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/varela"
                android:text="Available at 11:00"
                android:textColor="@color/jastest_grey"
                android:textSize="12dp" />



        </LinearLayout>


        <ImageView
            android:id="@+id/live_single_livelectures_quizLockIv"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/jastest_grey"
            android:src="@drawable/ic_lock_black_24dp"/>


        <TextView
            android:visibility="gone"
            android:id="@+id/main_single_yourcourses_buyCourseTv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="START"
            android:textColor="@color/cardColor"
            android:fontFamily="@font/varela"
            android:background="@drawable/box_cornered_googlebluefilled"/>

    </RelativeLayout>

</LinearLayout>