<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="16dp"
   android:layout_marginRight="12dp"
    android:background="@drawable/box_rectangle_whitefilled_greystroke">



        <TextView
            android:id="@+id/test_single_upcomingtest_testNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela"
           android:layout_marginHorizontal="16dp"
            android:text="IBPS PO Prelims Mock Test 1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp" />


    <TextView
        android:layout_weight="1"
        android:id="@+id/test_single_upcomingtest_availableDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_single_upcomingtest_testNameTv"
       android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text="Available on 24 Mar 2020" />


    <View
        android:id="@+id/cmdl"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/test_single_upcomingtest_availableDateTv"
        android:layout_marginTop="12dp"
        android:background="@color/grey"/>



    <TextView
        android:layout_weight="1"
        android:id="@+id/aldjiojs"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cmdl"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_round_red2_24dp"
        android:drawableTint="@color/darkGrey"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text=" Questions" />


    <TextView
        android:layout_weight="1"
        android:id="@+id/test_single_upcomingtest_questionsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cmdl"
        android:layout_toRightOf="@id/aldjiojs"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text="100" />




    <TextView
        android:layout_weight="1"
        android:id="@+id/aldjiojss"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/aldjiojs"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_round_red2_24dp"
        android:drawableTint="@color/darkGrey"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text=" Max Marks" />


    <TextView
        android:layout_weight="1"
        android:id="@+id/test_single_upcomingtest_marksTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aldjiojs"
        android:layout_toRightOf="@id/aldjiojss"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text="100.0" />



    <TextView
        android:layout_weight="1"
        android:id="@+id/aldjiojsss"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/aldjiojss"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_round_red2_24dp"
        android:drawableTint="@color/darkGrey"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text=" Time" />


    <TextView
        android:layout_weight="1"
        android:id="@+id/test_single_upcomingtest_timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aldjiojss"
        android:layout_toRightOf="@id/aldjiojsss"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text="60 Mins" />



    <TextView
            android:visibility="visible"
            android:id="@+id/test_single_upcomingtest_startNowTv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
        android:layout_below="@id/test_single_upcomingtest_timeTv"
            android:gravity="center"
        android:layout_centerHorizontal="true"
        android:drawableTint="@color/jast_grey"
        android:drawableRight="@drawable/ic_lock_black_24dp"
            android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="12dp"
            android:paddingVertical="8dp"

            android:textSize="12dp"
            android:text="START NOW"
            android:textColor="@color/jast_grey"
            android:fontFamily="@font/varela"
            android:background="@drawable/box_cornered_whitefilled_faintgreystroke"/>



</RelativeLayout>