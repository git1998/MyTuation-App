<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/enrolled_material_deep1_single_content_imageCv"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/cardColor">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_height="34dp"
            android:layout_width="34dp"
            android:padding="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/upsc_logo"/>

    </androidx.cardview.widget.CardView>


        <TextView
            android:visibility="visible"
            android:id="@+id/doubt_deep1_single_text_tittleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/enrolled_material_deep1_single_content_imageCv"
            android:layout_marginLeft="12dp"
            android:text="Social Science"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/varela"/>

    </RelativeLayout>
