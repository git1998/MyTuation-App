<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/box_cornered_whitefilled_faintgreystroke">


        <ImageView
            android:id="@+id/single_selectfiltersubject_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
         android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="0dp"
            android:src="@drawable/upsc_logo" />


    <LinearLayout
        android:id="@+id/browse_single_course_freeTrialLl"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/single_selectfiltersubject_iv"
        android:layout_toLeftOf="@id/prepare_single_course_buyNowTv"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/prepare_single_course_tittleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela"
            android:text="Minglish Mantra - SBI PO"
            android:textColor="@color/darkGrey"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/prepare_single_course_statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="12dp"
            android:fontFamily="@font/varela"
            android:textColor="@color/primaryRed"
            android:text="Free Trial ends in 2 days" />



    </LinearLayout>



    <TextView
        android:visibility="gone"
        android:id="@+id/prepare_single_course_buyNowTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:textSize="12dp"
        android:text="BUY NOW"
        android:textColor="@color/cardColor"
        android:fontFamily="@font/varela"
        android:background="@drawable/box_cornered_googlebluefilled"/>


    <ImageView
        android:id="@+id/prepare_single_course_moreVertIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:tint="@color/jast_grey"
        android:src="@drawable/ic_more_vert_black_24dp"/>



    </RelativeLayout>
