<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/question_single_rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp"
    android:layout_marginBottom="6dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/onlinetest_tv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:elevation="0dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/doubt_discussion_single_discussion_senderImageIV"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/leaderboard_profile_shubham"/>

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/doubt_discussion_single_discussion_nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/onlinetest_tv1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:textSize="14dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="@font/varela"
        android:text="Abhijit bodulwar" />

    <TextView
        android:id="@+id/doubt_discussion_single_discussion_dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/doubt_discussion_single_discussion_nameTv"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="4dp"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="@font/varela"
        android:textSize="14dp"
        android:text="20 hrs"/>




    <ImageView
        android:visibility="visible"
        android:id="@+id/question_single_isSolvedTvs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:tint="@color/jast_grey"
        android:src="@drawable/ic_more_vert_black_24dp"
        />

    <TextView
        android:visibility="visible"
        android:id="@+id/doubt_discussion_single_discussion_textTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/onlinetest_tv1"
        android:layout_below="@id/doubt_discussion_single_discussion_nameTv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:fontFamily="@font/varela"
        android:text="Thank you sir but please take full arithematic class that will help us"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/question_single_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_below="@id/doubt_discussion_single_discussion_textTv"
        android:layout_marginTop="8dp"
        android:src="@drawable/questionimage"/>



    <LinearLayout
        android:id="@+id/aass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/onlinetest_tv1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/doubt_discussion_single_discussion_textTv"
        android:paddingHorizontal="0dp">


        <TextView
            android:visibility="gone"
            android:id="@+id/doubt_comment_single_comment_discussTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
            android:drawableTint="@color/grey"
            android:drawablePadding="8dp"
            android:textSize="14dp"
            android:fontFamily="@font/varela"
            android:textColor="@color/jast_grey"
            android:text="1 LIKE" />



        <TextView
       android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:drawableLeft="@drawable/ic_reply_black_24dp"
            android:drawableTint="@color/grey"
            android:drawablePadding="8dp"
            android:textSize="14dp"
            android:fontFamily="@font/varela"
            android:textColor="@color/jast_grey"
            android:text="REPLY" />


    </LinearLayout>


    <View
        android:id="@+id/question_single_answer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/aass"
        android:layout_toRightOf="@+id/onlinetest_tv1"
        android:layout_marginTop="12dp"
        android:background="@color/faint_grey"/>



</RelativeLayout>