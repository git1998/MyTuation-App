<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_single_livelectures_parentRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_marginTop="8dp"
    android:paddingHorizontal="12dp"
    android:background="@drawable/box_cornered_whitefilled_greystroke"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.cardview.widget.CardView
            android:id="@+id/onlinetest_tv1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_centerVertical="true"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:backgroundTint="@color/black">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_height="34dp"
                android:layout_width="34dp"
                android:padding="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/leaderboard_profile_shubham"/>

        </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginVertical="8dp"
        android:layout_toRightOf="@id/onlinetest_tv1"
        android:layout_marginLeft="8dp">


        <TextView
            android:id="@+id/main_single_livelectures_tittleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/varela"
            android:text="Physics | Laws of motion in realm of quantum | Lec 1"
            android:textColor="@color/black"
            android:textSize="14dp" />



        <TextView
            android:id="@+id/main_single_livelectures_avaialbeAtTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_single_livelectures_tittleTv"
            android:layout_alignStart="@id/main_single_livelectures_tittleTv"
            android:fontFamily="@font/varela"
            android:text="Available at 10:00"
            android:textSize="12dp"
            android:textColor="@color/jast_grey"/>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/main_single_livelectures_liveNowRl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/main_single_livelectures_avaialbeAtTv"
            android:layout_alignStart="@id/main_single_livelectures_tittleTv"
            android:layout_marginTop="0dp">


            <TextView
                android:id="@+id/ljoijojjl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/varela"
                android:text="27 Joined"
                android:textSize="12dp"
                android:textColor="@color/jast_grey"/>


            <ImageView
                android:id="@+id/iuiussiui"
                android:layout_height="12dp"
                android:layout_width="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:padding="0dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_round_red2_24dp"/>



            <TextView
                android:id="@+id/ljoijojjffl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/varela"
                android:text="Live Now"
                android:textSize="12dp"
                android:textColor="@color/primaryRed"/>



        </LinearLayout>



    </LinearLayout>



</RelativeLayout>