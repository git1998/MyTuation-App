<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:id="@+id/main_home_fragment_allPostRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@color/faint_grey">

        <TextView
            android:id="@+id/main_home_fragment_allCoursesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/fragment_study_dropIv"
            android:paddingVertical="10dp"
            android:layout_marginBottom="0dp"
            android:text="ALL POSTS"
            android:textColor="@color/darkGrey"
            android:textSize="14dp"
            android:fontFamily="@font/varela" />


        <ImageView
            android:id="@+id/fragment_study_dropIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:paddingVertical="3dp"
            android:tint="@color/google_blue"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"/>


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/main_home_fragment_allCoursesTv"
            android:background="@color/grey"></View>



    </RelativeLayout>


    <ProgressBar
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>


    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/main_home_fragment_recyclerviewRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="0dp"/>


    <TextView
        android:id="@+id/main_home_fragment_loadingTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:layout_marginBottom="0dp"
        android:text="Loading..."
        android:textColor="@color/darkGrey"
        android:textSize="14dp"
        android:fontFamily="@font/varela" />



</LinearLayout>