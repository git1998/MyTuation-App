<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/enrolled_material_single_content_parentRl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_cornered_whitefilled_greystroke"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="8dp">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:padding="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/sidapp_arrow"/>



    <TextView
        android:id="@+id/enrolled_material_single_content_tittleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/imageView1"
        android:fontFamily="@font/varela"
        android:text="Paper 1 - Algebra and Trigonometry"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/onlinetest_single_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enrolled_material_single_content_tittleTv"
        android:layout_alignStart="@id/enrolled_material_single_content_tittleTv"
        android:fontFamily="@font/varela"
        android:text="[Number] Units"
        android:textSize="12dp"
        android:textColor="@color/jast_grey"/>


    <ProgressBar
        android:id="@+id/classroom_material_single_content_progressbarPb"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
       android:layout_marginRight="12dp"
        android:indeterminateTint="@color/jastest_grey"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/enrolled_material_single_content_addViewLl"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/onlinetest_single_time"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        android:background="@color/faint_grey">



    </LinearLayout>




</RelativeLayout>