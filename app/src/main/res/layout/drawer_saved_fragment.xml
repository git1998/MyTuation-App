<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardColor">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cardColor">


        <ImageView
            android:id="@+id/activity_main_drawerIv"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:tint="@color/jastest_grey"
            android:src="@drawable/ic_chevron_left_black_24dp"/>


        <TextView
            android:visibility="visible"
            android:id="@+id/activity_detailed_titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="4dp"
            android:layout_toRightOf="@id/activity_main_drawerIv"
            android:layout_marginLeft="12dp"
            android:text="My Saved Note's"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/varela"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey"/>


    </RelativeLayout>




    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/fragment_question_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="0dp"
        android:orientation="vertical"
        android:background="@color/faintest_grey">



        <TextView
            android:id="@+id/fragment_question_filteTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp"
            android:textSize="12dp"
            android:fontFamily="@font/varela"
            android:textColor="@color/jastest_grey"
            android:text="SEARCH BY COURSES" />



        <HorizontalScrollView
            android:id="@+id/fdsb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_question_filteTv">

            <LinearLayout
                android:id="@+id/fragment_question_addSubjectRootLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingHorizontal="12dp">




            </LinearLayout>



        </HorizontalScrollView>


        <View
            android:visibility="visible"
            android:id="@+id/fdjdkifd"
            android:layout_below="@+id/fdsb"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@color/faint_grey"/>



    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/cardColor">


    <TextView
        android:id="@+id/gfjfdiohjds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
       android:layout_centerVertical="true"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Choose Course : All" />



        <RelativeLayout
            android:id="@+id/bookmarks_a_main_fragment_selectTypeLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/fragment_question_mysoubt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginBottom="0dp"
            android:layout_toLeftOf="@+id/fragment_study_dropIv"
            android:text="All"
            android:textColor="@color/colorPrimaryGreen"
            android:textSize="14dp"
            android:fontFamily="@font/varela" />


        <ImageView
            android:id="@+id/fragment_study_dropIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingVertical="3dp"
            android:tint="@color/colorPrimaryGreen"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"/>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>