<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/enrolled_material_deep1_single_content_parentRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="12dp"
    android:layout_marginBottom="8dp"
    android:paddingHorizontal="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/textview_background_bottom">

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/enrolled_material_deep1_single_content_imageCv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/black">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_height="34dp"
            android:layout_width="34dp"
            android:padding="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/leaderboard_profile_shubham"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/enrolled_material_deep1_single_content_tittleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/enrolled_material_deep1_single_content_imageCv"
        android:layout_toLeftOf="@+id/enrolled_material_deep1_single_content_joinTv"
        android:fontFamily="@font/varela"
        android:text="Physics | Laws of motion in realm of quantum | Lec 1"
        android:textColor="@color/black"
        android:textSize="14dp" />



        <TextView
            android:id="@+id/enrolled_material_deep1_single_content_extraInfoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enrolled_material_deep1_single_content_tittleTv"
            android:layout_alignStart="@id/enrolled_material_deep1_single_content_tittleTv"
            android:fontFamily="@font/varela"
            android:text="27 Views  12 Likes"
            android:textSize="12dp"
            android:textColor="@color/jast_grey"/>



    <TextView
        android:visibility="visible"
        android:id="@+id/enrolled_material_deep1_single_content_joinTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/enrolled_material_deep1_single_content_extraInfoTv"
        android:layout_marginBottom="0dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="PLAY"
        android:textColor="@color/cardColor"
        android:fontFamily="@font/varela"
        android:background="@drawable/box_cornered_googlebluefilled"/>




</RelativeLayout>