<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_single_livelectures_parentRl"
    android:layout_width="200dp"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="12dp"
    android:paddingVertical="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@drawable/box_cornered_whitefilled_faintgreystroke"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/onlinetest_tv1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/black">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_height="34dp"
            android:layout_width="34dp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/leaderboard_profile_shubham"/>

    </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/main_single_livelectures_tittleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_alignTop="@id/onlinetest_tv1"
           android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/onlinetest_tv1"
            android:fontFamily="@font/varela"
            android:text="Laws of motion | Newtons 1st law"
            android:textColor="@color/black"
            android:textSize="14dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:layout_below="@id/onlinetest_tv1"
        android:background="@color/faint_grey">





    </LinearLayout>


</RelativeLayout>