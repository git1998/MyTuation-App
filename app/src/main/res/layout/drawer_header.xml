<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:background="@color/cardColor">


    <RelativeLayout
    android:id="@+id/top_profile_layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/record_student_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/drawer_header_imageviewIv"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_placeholder"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/drawer_header_nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/record_student_image_view"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/varela"
        android:textColor="@color/black"
        android:text="Abhijit Bodulwar" />


    <TextView
        android:id="@+id/drawer_header_mobileNoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/record_student_image_view"
        android:layout_below="@id/drawer_header_nameTv"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"
        android:textSize="14dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/darkGrey"
        android:text="My Profile" />

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/record_student_image_view"
            android:layout_below="@id/drawer_header_mobileNoTv"
            android:drawableLeft="@drawable/ic_round_red2_24dp"
            android:drawableTint="@color/colorPrimaryGreen"
            android:drawablePadding="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"
            android:fontFamily="@font/varela"
            android:textColor="@color/darkGrey"
            android:text="Online" />



        <ImageView
            android:visibility="visible"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:tint="@color/jastest_grey"/>


</RelativeLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/top_profile_layout2"
        android:background="@color/grey"></View>



    <TableLayout
        android:id="@+id/fcszbfkjsf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="12dp"
        android:layout_below="@id/view">



        <TableRow
            android:id="@+id/drawer_header_moreCoursesTr">

            <ImageView
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_subscriptions_black_24dp"
                android:tint="@color/darkGrey"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/varela"
                android:text="Minglish Mantra's courses" />

        </TableRow>


        <TableRow
            android:visibility="gone"
            android:id="@+id/drawer_header_savedNotesTr"
            android:layout_marginTop="20dp">

            <ImageView
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bookmark_black_24dp"
                android:tint="@color/darkGrey"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"

                android:textColor="@color/black"
                android:fontFamily="@font/varela"
                android:text="My Saved Notes" />

        </TableRow>





        <TableRow
            android:visibility="gone"
            android:id="@+id/drawer_header_myPaymentTr"
            android:layout_marginTop="20dp">

            <ImageView
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_receipt_black_24dp"
                android:tint="@color/darkGrey"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"

                android:textColor="@color/black"
                android:fontFamily="@font/varela"
                android:text="My Payments" />

        </TableRow>



    </TableLayout>





    <View
        android:visibility="gone"
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fcszbfkjsf"
        android:layout_marginTop="24dp"
        android:background="@color/grey"></View>



    <TableLayout
        android:id="@+id/vxnmbvnxz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        android:layout_below="@id/view2">


        <TableRow
            android:visibility="gone"
            android:id="@+id/drawer_header_signOut"
            android:layout_marginTop="0dp">

            <ImageView
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings_black_24dp"
                android:tint="@color/darkGrey"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:fontFamily="@font/varela"
                android:textColor="@color/black"
                android:text="Settings" />

        </TableRow>



        <TableRow
            android:visibility="gone"
            android:id="@+id/drawer_header_signOut"
            android:layout_marginTop="20dp">

            <ImageView
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_help_black_24dp"
                android:tint="@color/darkGrey"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:fontFamily="@font/varela"
                android:textColor="@color/black"
                android:text="Help and Feedback" />

        </TableRow>



        <TableRow
            android:visibility="visible"
            android:id="@+id/drawer_header_aboutAppTr"
            android:layout_marginTop="0dp">

            <ImageView
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_android_black_24dp"
                android:tint="@color/darkGrey"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:fontFamily="@font/varela"
                android:textColor="@color/black"
                android:text="About LearnYes" />

        </TableRow>



    </TableLayout>



</RelativeLayout>