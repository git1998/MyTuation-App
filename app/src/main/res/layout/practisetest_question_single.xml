<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/cardColor">

        <TextView
            android:id="@+id/practise_question_single_queNoTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q.1"
            android:textSize="20dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:fontFamily="@font/varela"
            android:textColor="@android:color/black"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/practise_question_single_queNoTv"
            android:background="@color/faint_grey"/>




                    <TextView
                        android:visibility="gone"
                        android:id="@+id/practise_question_single_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Which addresses can be given to device in network 131.107.0.0 with astandered class B subnet mask."
                        android:textSize="18dp"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/varela"
                        android:textColor="@android:color/black"/>


                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/practise_question_single_questionImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="12dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/questionimage"/>


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/practise_question_single_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What will be final speed ?"
                        android:textSize="18dp"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/varela"
                        android:textColor="@android:color/black"/>



    <com.example.minglishmantra_beta.RecursiveRadioGroup
        android:id="@+id/practisetest_question_single_rrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/practisetest_question_single_optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:text="Maharashtra"
            android:textColor="@color/black"
            android:fontFamily="@font/varela"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:buttonTint="@color/darkGrey"
            android:background="@drawable/practisetest_selector_radiobuttons"/>


        <RadioButton
            android:id="@+id/practisetest_question_single_optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:text="Uttar pradesh"
            android:textColor="@color/black"
            android:fontFamily="@font/varela"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:buttonTint="@color/darkGrey"
            android:background="@drawable/practisetest_selector_radiobuttons"/>


        <RadioButton
            android:id="@+id/practisetest_question_single_optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:text="Telangana"
            android:textColor="@color/black"
            android:fontFamily="@font/varela"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:buttonTint="@color/darkGrey"
            android:background="@drawable/practisetest_selector_radiobuttons"/>



        <RadioButton
            android:id="@+id/practisetest_question_single_optionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:text="All of above"
            android:textColor="@color/black"
            android:fontFamily="@font/varela"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:buttonTint="@color/darkGrey"
            android:background="@drawable/practisetest_selector_radiobuttons"/>


    </com.example.minglishmantra_beta.RecursiveRadioGroup>





</LinearLayout>