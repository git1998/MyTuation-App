<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cardColor">


        <ImageView
            android:id="@+id/activity_main_drawerIv"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:tint="@color/jastest_grey"
            android:src="@drawable/ic_chevron_left_black_24dp"/>


        <TextView
            android:visibility="visible"
            android:id="@+id/main_doubt_deep1_fragment_titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="4dp"
            android:layout_toRightOf="@id/activity_main_drawerIv"
            android:layout_marginLeft="12dp"
            android:text="Choose class"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/varela"/>

    </RelativeLayout>



    <TextView
        android:visibility="visible"
        android:id="@+id/main_doubt_deep1_fragment_textviewTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textStyle="bold"
        android:text="CLASSES"
        android:textSize="14dp"
        android:textColor="@color/darkGrey"
        android:fontFamily="@font/varela"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rmain_doubt_deep1_fragment_recyclervireRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"/>





</LinearLayout>