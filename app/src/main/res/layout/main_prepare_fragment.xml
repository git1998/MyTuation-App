<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:visibility="visible"
    android:id="@+id/activity_main_courseEnrolledLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:background="@color/cardColor">



        <TextView
            android:id="@+id/cmidsid"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="RECENT WATCHED"
            android:textSize="12dp"
            android:textColor="@color/darkGrey"
            android:fontFamily="@font/varela"/>


        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/main_prepare_fragment_recentWatchedRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cmidsid"
            android:layout_marginVertical="12dp"/>


        <TextView
            android:id="@+id/fsfsf"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_centerInParent="true"
            android:layout_marginLeft="12dp"
            android:text="Feature Coming soon..."
            android:textSize="12dp"
            android:textColor="@color/darkGrey"
            android:fontFamily="@font/varela"/>



    </RelativeLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/cardColor">

        <TextView
            android:id="@+id/sadfdf"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:text="My Courses"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/doppio_one"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/browse_choosecourse_fragment_courseRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sadfdf"
            android:paddingHorizontal="12dp"/>


    </RelativeLayout>

    </LinearLayout>