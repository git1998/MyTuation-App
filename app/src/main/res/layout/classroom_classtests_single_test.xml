<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cardColor"
    android:layout_marginBottom="16dp"
    android:paddingLeft="4dp">


        <TextView
            android:id="@+id/classroom_classtests_single_test_tittleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textSize="14dp"
            android:fontFamily="@font/varela"
            android:textColor="@color/black"
            android:text="Science | Gravitaion test 1" />



    <TextView
        android:id="@+id/classroom_classtests_single_test_noOfQueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classroom_classtests_single_test_tittleTv"
        android:layout_marginLeft="0dp"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text="6 Que" />


    <ImageView
        android:id="@+id/single_study_viewpager_card_tv3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/classroom_classtests_single_test_noOfQueTv"
        android:layout_below="@+id/classroom_classtests_single_test_tittleTv"
        android:layout_marginHorizontal="4dp"
        android:src="@drawable/indicator_default" />

    <TextView
        android:id="@+id/classroom_classtests_single_test_timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classroom_classtests_single_test_tittleTv"
        android:layout_toRightOf="@+id/single_study_viewpager_card_tv3"
        android:layout_marginLeft="0dp"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text="30 min" />


    <ImageView
        android:id="@+id/single_study_viewpager_card_tv4"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/classroom_classtests_single_test_timeTv"
        android:layout_below="@+id/classroom_classtests_single_test_tittleTv"
        android:layout_marginHorizontal="4dp"
        android:src="@drawable/indicator_default" />



    <TextView
        android:id="@+id/classroom_classtests_single_test_marksTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/single_study_viewpager_card_tv4"
        android:layout_below="@+id/classroom_classtests_single_test_tittleTv"
        android:textSize="12dp"
        android:fontFamily="@font/varela"
        android:textColor="@color/jast_grey"
        android:text="15 marks" />


    <TextView
        android:id="@+id/classroom_classtests_single_test_dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classroom_classtests_single_test_marksTv"
        android:fontFamily="@font/varela"
        android:text="Held on 09/09/2020"
        android:textSize="10dp"
        android:textColor="@color/darkGrey"/>



    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:tint="@color/jast_grey"
        android:src="@drawable/ic_lock_black_24dp"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/classroom_classtests_single_test_attemptNow"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
        android:layout_alignTop="@id/classroom_classtests_single_test_tittleTv"
            android:layout_marginTop="2dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="4dp"
            android:drawableRight="@drawable/ic_lock_black_24dp"
            android:drawableTint="@color/jast_grey"
            android:textSize="12dp"
            android:text="START NOW"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:fontFamily="@font/varela"
            android:background="@drawable/box_cornered_whitefilled_faintgreystroke"/>


</RelativeLayout>