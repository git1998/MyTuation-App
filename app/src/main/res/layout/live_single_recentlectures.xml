<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_single_recentlectures_parentRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="0dp"
    android:paddingHorizontal="12dp"
    android:background="@color/cardColor"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_single_recentlectures_cardViewCv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:layout_centerVertical="true"
        android:elevation="0dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/live_single_recentlectures_senderImageIv"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/app_chetan_thakre2"/>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/lksosoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginVertical="10dp"
        android:layout_toRightOf="@id/main_single_recentlectures_cardViewCv"
        android:layout_marginLeft="8dp">


        <TextView
            android:id="@+id/main_single_recentlectures_tittleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/varela"
            android:text="Crossing River"
            android:textColor="@color/black"
            android:textSize="14dp" />



        <TextView
            android:id="@+id/main_single_recentlectures_availableTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_single_livelectures_tittleTv"
            android:layout_alignStart="@id/main_single_livelectures_tittleTv"
            android:fontFamily="@font/varela"
            android:text="Available at 10:00"
            android:textSize="12dp"
            android:textColor="@color/jast_grey"/>



    </LinearLayout>


    <ImageView
        android:id="@+id/main_single_recentlectures_chevRightIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/lksosoo"
        android:src="@drawable/ic_chevron_right_black_24dp"/>


    <View
        android:id="@+id/main_single_recentlectures_viewV"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lksosoo"
        android:background="@color/grey"/>



</RelativeLayout>